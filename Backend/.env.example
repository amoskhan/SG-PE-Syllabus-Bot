# Copy this file to .env and fill in the values

SECRET_KEY=replace-with-a-long-random-string

DEBUG=True

# MySQL Database
DB_NAME=sgpe_bot
DB_USER=sgpe_user
DB_PASSWORD=replace-with-your-db-password
DB_HOST=localhost
DB_PORT=3306
# Root password â€” only needed by Docker Compose to initialise the MySQL container
MYSQL_ROOT_PASSWORD=replace-with-a-root-password

# Gemini API (from Google AI Studio: aistudio.google.com)
GEMINI_API_KEY=replace-with-your-gemini-api-key

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=replace-with-your-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-your-google-client-secret

# Allowed school email domains (comma-separated, no spaces)
ALLOWED_EMAIL_DOMAINS=moe.edu.sg,schools.gov.sg

# Frontend URL for CORS and redirect after login
FRONTEND_URL=http://localhost:3000
